{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "es5",
    "module": "umd",
    "lib": ["es6"],
    "declaration": true,
    "sourceMap": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "inlineSources": true
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/__tests__/*"]
}
